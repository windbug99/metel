{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://metel.local/agent/pipeline_dsl_schema.json",
  "title": "Metel Pipeline DSL v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["pipeline_id", "version", "limits", "nodes"],
  "properties": {
    "pipeline_id": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "enum": ["1.0"]
    },
    "limits": {
      "type": "object",
      "additionalProperties": false,
      "required": ["max_nodes", "max_fanout", "max_tool_calls", "pipeline_timeout_sec"],
      "properties": {
        "max_nodes": { "type": "integer", "minimum": 1, "maximum": 6 },
        "max_fanout": { "type": "integer", "minimum": 1, "maximum": 50 },
        "max_tool_calls": { "type": "integer", "minimum": 1, "maximum": 200 },
        "pipeline_timeout_sec": { "type": "integer", "minimum": 10, "maximum": 300 }
      }
    },
    "nodes": {
      "type": "array",
      "minItems": 1,
      "maxItems": 6,
      "items": {
        "$ref": "#/definitions/node"
      }
    }
  },
  "definitions": {
    "retry_policy": {
      "type": "object",
      "additionalProperties": false,
      "required": ["max_attempts", "backoff_ms"],
      "properties": {
        "max_attempts": { "type": "integer", "minimum": 1, "maximum": 3 },
        "backoff_ms": { "type": "integer", "minimum": 0, "maximum": 5000 }
      }
    },
    "node": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "type", "name", "depends_on", "input", "timeout_sec"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_\\-]+$",
          "minLength": 1,
          "maxLength": 64
        },
        "type": {
          "type": "string",
          "enum": ["skill", "llm_transform", "for_each", "verify"]
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 120
        },
        "depends_on": {
          "type": "array",
          "items": { "type": "string", "pattern": "^[a-zA-Z0-9_\\-]+$" },
          "uniqueItems": true
        },
        "input": {
          "type": "object"
        },
        "when": {
          "type": "string",
          "minLength": 1,
          "maxLength": 300
        },
        "retry": {
          "$ref": "#/definitions/retry_policy"
        },
        "timeout_sec": {
          "type": "integer",
          "minimum": 1,
          "maximum": 120
        },
        "source_ref": {
          "type": "string",
          "pattern": "^\\$[a-zA-Z0-9_\\-]+\\.[a-zA-Z0-9_\\-\\.\\[\\]]+$"
        },
        "item_node_ids": {
          "type": "array",
          "items": { "type": "string", "pattern": "^[a-zA-Z0-9_\\-]+$" },
          "uniqueItems": true
        },
        "rules": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "maxItems": 30
        },
        "output_schema": {
          "type": "object"
        }
      }
    }
  }
}
