{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Metel Service Tool Spec",
  "type": "object",
  "required": [
    "service",
    "version",
    "base_url",
    "auth",
    "tools"
  ],
  "properties": {
    "service": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "base_url": {
      "type": "string",
      "minLength": 1
    },
    "auth": {
      "type": "object",
      "required": ["type", "required_scopes"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["oauth2", "api_key", "none"]
        },
        "required_scopes": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": true
    },
    "limits": {
      "type": "object",
      "properties": {
        "timeout_ms": { "type": "integer", "minimum": 1000 },
        "max_calls_per_run": { "type": "integer", "minimum": 1 }
      },
      "additionalProperties": true
    },
    "tools": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "tool_name",
          "description",
          "method",
          "path",
          "adapter_function",
          "input_schema"
        ],
        "properties": {
          "tool_name": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 },
          "method": {
            "type": "string",
            "enum": ["GET", "POST", "PATCH", "PUT", "DELETE"]
          },
          "path": { "type": "string", "minLength": 1 },
          "adapter_function": { "type": "string", "minLength": 1 },
          "required_scopes": {
            "type": "array",
            "items": { "type": "string" }
          },
          "idempotency_key_policy": {
            "type": "string",
            "enum": ["none", "optional", "required"]
          },
          "input_schema": {
            "type": "object"
          },
          "error_map": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
