{
  "name": "linear.issue_delete",
  "version": "1.0.0",
  "summary": "Delete/archive Linear issue (soft delete when provider supports)",
  "provider": { "service": "linear", "auth": "oauth", "scopes": ["write"] },
  "runtime_tools": ["linear_search_issues", "linear_update_issue"],
  "autofill": {
    "sources": ["chat_context.last_issue_id"],
    "rules": ["if issue_id is null, resolve by issue_ref"]
  },
  "input_schema": {
    "type": "object",
    "required": ["target"],
    "properties": {
      "target": {
        "type": "object",
        "properties": {
          "issue_id": { "type": ["string", "null"] },
          "issue_ref": { "type": ["string", "null"] }
        },
        "additionalProperties": false
      }
    },
    "additionalProperties": false
  },
  "output_schema": {
    "type": "object",
    "required": ["status"],
    "properties": {
      "status": { "type": "string", "enum": ["success", "needs_input", "error"] },
      "result": { "type": ["object", "null"] },
      "needs_input": { "type": ["object", "null"] },
      "error": { "type": ["object", "null"] }
    },
    "additionalProperties": false
  },
  "examples": [
    { "name": "delete_by_ref", "input": { "target": { "issue_ref": "OPT-99" } } }
  ]
}
