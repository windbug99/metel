{
  "name": "linear.issue_search",
  "version": "1.0.0",
  "summary": "Search Linear issues",
  "provider": { "service": "linear", "auth": "oauth", "scopes": ["read"] },
  "runtime_tools": ["linear_search_issues", "linear_list_issues"],
  "autofill": {
    "sources": ["chat_context.last_issue_reference"],
    "rules": ["if query is null, ask user"]
  },
  "input_schema": {
    "type": "object",
    "required": ["query"],
    "properties": {
      "query": { "type": "string" },
      "first": { "type": "integer", "minimum": 1, "maximum": 20 }
    },
    "additionalProperties": false
  },
  "output_schema": {
    "type": "object",
    "required": ["status"],
    "properties": {
      "status": { "type": "string", "enum": ["success", "needs_input", "error"] },
      "result": { "type": ["object", "null"] },
      "needs_input": { "type": ["object", "null"] },
      "error": { "type": ["object", "null"] }
    },
    "additionalProperties": false
  },
  "examples": [
    { "name": "by_key", "input": { "query": "OPT-35", "first": 5 } }
  ]
}
