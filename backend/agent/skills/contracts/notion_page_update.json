{
  "name": "notion.page_update",
  "version": "1.0.0",
  "summary": "Update Notion page content/properties",
  "provider": { "service": "notion", "auth": "oauth", "scopes": ["update_content"] },
  "runtime_tools": ["notion_search", "notion_append_block_children"],
  "autofill": {
    "sources": ["chat_context.last_active_page_id"],
    "rules": ["if page_id is null, resolve by title search"]
  },
  "input_schema": {
    "type": "object",
    "required": ["target", "patch"],
    "properties": {
      "target": {
        "type": "object",
        "properties": {
          "page_id": { "type": ["string", "null"] },
          "title": { "type": ["string", "null"] }
        },
        "additionalProperties": false
      },
      "patch": {
        "type": "object",
        "properties": {
          "body": { "type": ["string", "null"] },
          "properties": { "type": ["object", "null"] }
        },
        "additionalProperties": false
      }
    },
    "additionalProperties": false
  },
  "output_schema": {
    "type": "object",
    "required": ["status"],
    "properties": {
      "status": { "type": "string", "enum": ["success", "needs_input", "error"] },
      "result": { "type": ["object", "null"] },
      "needs_input": { "type": ["object", "null"] },
      "error": { "type": ["object", "null"] }
    },
    "additionalProperties": false
  },
  "examples": [
    { "name": "append_summary", "input": { "target": { "title": "스프린트 회고" }, "patch": { "body": "요약 업데이트" } } }
  ]
}
