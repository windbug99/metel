{
  "name": "notion.page_create",
  "version": "1.0.0",
  "summary": "Create a Notion page with title/body",
  "provider": { "service": "notion", "auth": "oauth", "scopes": ["insert_content"] },
  "runtime_tools": ["notion_create_page"],
  "autofill": {
    "sources": ["chat_context.default_notion_parent"],
    "rules": ["if parent is null, use default notion parent"]
  },
  "input_schema": {
    "type": "object",
    "required": ["title"],
    "properties": {
      "title": { "type": "string" },
      "body": { "type": ["string", "null"] },
      "parent": { "type": ["object", "null"] }
    },
    "additionalProperties": false
  },
  "output_schema": {
    "type": "object",
    "required": ["status"],
    "properties": {
      "status": { "type": "string", "enum": ["success", "needs_input", "error"] },
      "result": { "type": ["object", "null"] },
      "needs_input": { "type": ["object", "null"] },
      "error": { "type": ["object", "null"] }
    },
    "additionalProperties": false
  },
  "examples": [
    { "name": "basic", "input": { "title": "Daily Weather", "body": "Seoul weather summary" } }
  ]
}
