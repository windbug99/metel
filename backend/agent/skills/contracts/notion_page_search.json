{
  "name": "notion.page_search",
  "version": "1.0.0",
  "summary": "Search Notion pages by query",
  "provider": { "service": "notion", "auth": "oauth", "scopes": ["read_content"] },
  "runtime_tools": ["notion_search"],
  "autofill": {
    "sources": ["chat_context.last_query"],
    "rules": ["if query is null, ask user"]
  },
  "input_schema": {
    "type": "object",
    "required": ["query"],
    "properties": {
      "query": { "type": "string" },
      "page_size": { "type": "integer", "minimum": 1, "maximum": 20 }
    },
    "additionalProperties": false
  },
  "output_schema": {
    "type": "object",
    "required": ["status"],
    "properties": {
      "status": { "type": "string", "enum": ["success", "needs_input", "error"] },
      "result": { "type": ["object", "null"] },
      "needs_input": { "type": ["object", "null"] },
      "error": { "type": ["object", "null"] }
    },
    "additionalProperties": false
  },
  "examples": [
    { "name": "by_title", "input": { "query": "스프린트 회고", "page_size": 5 } }
  ]
}
